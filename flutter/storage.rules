rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // テナントごとのサービス画像へのアクセス
    match /tenants/{tenantId}/services/{serviceId}/{imageId} {
      // 認証済みユーザーは読み取り可能
      allow read: if request.auth != null;
      
      // 認証済みユーザーは書き込み可能（ファイルサイズ制限付き）
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024; // 5MB以下
    }
    
    // その他のパスへのアクセスは拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
